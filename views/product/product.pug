extends ../main

block content
    h3= product['name']
    <form action="products/edit" method="post">
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="validationDefault01">Barcode</label>
                input(class="form-control" value=product['barcode'] name = "id" readonly)
            </div>
            <div class="form-group col-md-2">
                <label for="validationDefault01">Supplier</label>
                input(class="form-control" value=product['supplier'] readonly)
            </div>
            <div class="form-group col-md-2">
                <label for="validationDefault01">Retail Price</label>
                input(class="form-control" value=product['retailPrice'] name= "retail")
            </div>
            <div class="form-group col-md-2">
                <label for="validationDefault01">Supplier Price</label>
                input(type="text" class="form-control" name="supply" id="validationDefault01" placeholder="Name" value=product['supplierPrice'])
            </div>
        </div>
        <div class="form-row">
        <div class="form-group col-md-6">
                <label for="validationDefault01">Product's Name</label>
                input(type="text" class="form-control" name="name" id="validationDefault01" placeholder="Name" value=product['name'])
        </div>
        <div class="form-group col-md-2">
        <label for="validationDefault01">Expiry Date</label>
        input(class="form-control" value=product['expiryDate'] name= "expiry")
        </div>
        </div>
         <button type="submit" class="btn btn-primary">Save</button>
    </form>
