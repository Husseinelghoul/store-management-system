extends ../main

block content
    h3= employee['name']
    <form action="employees/edit" method="post">
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="validationDefault01">ID</label>
                input(class="form-control" value=employee['employeeID'] name = "id" readonly)
            </div>
            <div class="form-group col-md-2">
                <label for="validationDefault01">Branch ID</label>
                <select class="form-control" id="sel1" name="branch">
                each branch in branches
                        <option value=#{branch['branchID']}>#{branch['branchAddress']} </option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="validationDefault01">Status</label>
                input(class="form-control" value=employee['employeeStatus'] name= "status" required="required")
            </div>
            <div class="form-group col-md-3">
                <label for="validationDefault01">Employee's Name</label>
                input(type="text" class="form-control" name="name" id="validationDefault01" placeholder="Name" value=employee['name'] required="required")
            </div>
            <div class="form-group col-md-3">
                <label for="validationDefault01">Manager's Name</label>
                input(type="text" class="form-control" id="validationDefault01" placeholder="Manager Name" value=employee['managerName'] readonly)
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email Address</label>
                input(value=employee['emailAddress'] type="email" class="form-control" id="inputEmail4" name="email" placeholder="Email" required="required")
            </div>
            <div class="form-group col-md-3">
                <label for="validationDefaultUsername">Phone Number</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend2">+961</span>
                    </div>
                    input(value=employee['phoneNumber'] type="tel" class="form-control" name="phoneNumber" id="phonum" placeholder="Phone Number" aria-describedby="inputGroupPrepend2" pattern="[0-9]{8}" required="required")
                </div>
            </div>
            <div class="form-group col-md-3">
                <label for="validationDefault01">Salary</label>
                input(class="form-control" value=employee['salary'] name= "salary" required="required")
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>