extends ../main

block content
    h1 Add Employee:
    h5    <form action="employees/addEmployee" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
            <label for="validationDefault01">Employee's Name</label>
            <input type="text" class="form-control" name="name" id="validationDefault01" placeholder="Full Name" required="required">
        </div>
            <div class="form-group col-md-6">
            <label for="validationDefaultUsername">Phone Number</label>
        <div class="input-group">
            <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend2">+961</span>
            </div>
            <input type="tel" class="form-control" name="phoneNumber" id="phonum" placeholder="Phone Number" aria-describedby="inputGroupPrepend2" pattern="[0-9]{8}" required="required">
        </div>
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" name="address" placeholder="1234 Main St" required="required">
        </div>
        <label for="inputAddress2">Salary</label>
        <div class="input-group">
            <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend2">USD</span>
            </div>
            <input type="text" class="form-control" name='salary' pattern="[0-9]*" placeholder="123" required="required">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
            <label for="inputEmail4">Email Address</label>
            <input type="email" class="form-control" id="inputEmail4" name="email" placeholder="Email" required="required">
            </div>
            <div class="form-group col-md-4">
            <label for="inputState">Branch</label>
            <select class="form-control" id="sel1" name="branch">
                each branch in branches
                    each value, key in branch
                        <option> #{value}</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    