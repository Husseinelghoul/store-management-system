extends ../main

block content
    .dropdown
            button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(
                type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
                | Sort By
            .dropdown-menu(aria-labelledby='dropdownMenuButton')
                a.dropdown-item(href='customers?sort=name') Name
                a.dropdown-item(href='customers?sort=customerID') ID
                a.dropdown-item(href='customers?sort=branchID') Branch
                a.dropdown-item(href='customers?status=1') See only active customers
                a.dropdown-item(href='customers?status=0') See inactive customers
    h2 Customers:
    .container
        each customer in customers
            .card(style=(customer['customerStatus'] ? null : 'background-color: lightgray' ))
                .card-body
                    h5.card-title #{customer['name']}
                    h6.card-subtitle.mb-2.text-muted #{customer['emailAddress'] || customer['phoneNumber']}
                    a.card-link(href=`customers/customer/${customer['customerID']}`) View Customer
                    a.card-link(href='#') See Transactions
    <a href="customers/addCustomerView"class="btn btn-success btn-lg btn-block" role="button" aria-pressed="true">Add Customer</a>