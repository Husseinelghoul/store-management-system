extends ../main

block content
    h3= customer['name']
    <form action="customers/edit" method="post">
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="validationDefault01">ID</label>
                input(class="form-control" value=customer['customerID'] name = "id" readonly)
            </div>
            <div class="form-group col-md-2">
                <label for="validationDefault01">Branch ID</label>
                input(class="form-control" value=customer['branchID'] readonly)
            </div>
            <div class="form-group col-md-2">
                <label for="validationDefault01">Status</label>
                input(class="form-control" value=customer['customerStatus'] name= "status")
            </div>
            <div class="form-group col-md-6">
                <label for="validationDefault01">Customer's Name</label>
                input(type="text" class="form-control" name="name" id="validationDefault01" placeholder="Name" value=customer['name'])
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Address</label>
            input(value=customer['deliveryAddress'] type="text" class="form-control" id="inputAddress" name="address" placeholder="1234 Main St")
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email Address</label>
                input(value=customer['emailAddress'] type="email" class="form-control" id="inputEmail4" name="email" placeholder="Email")
            </div>
            <div class="form-group col-md-6">
                <label for="validationDefaultUsername">Phone Number</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend2">+961</span>
                    </div>
                    input(value=customer['phoneNumber'] type="tel" class="form-control" name="phoneNumber" id="phonum" placeholder="Phone Number" aria-describedby="inputGroupPrepend2" pattern="[0-9]{8}")
                </div>
            </div>
        </div>

